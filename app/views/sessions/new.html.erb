<h1>Iniciar Sesión</h1>

<% if flash.now[:alert] %>
  <p class="alert alert-danger"><%= flash.now[:alert] %></p>
<% end %>

<%= form_with(url: sessions_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <%= form.submit 'Iniciar Sesión', class: 'btn btn-primary' %>
<% end %>

<%= link_to '¿No tienes una cuenta? Regístrate aquí', signup_path %>
