<h1>Panel de Administración</h1>

<h2>Listado de Usuarios</h2>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %> |
      <%= link_to 'Editar', edit_user_admin_index_path(user) %> |
      <%= link_to 'Eliminar', destroy_user_admin_index_path(user), method: :delete, data: { confirm: '¿Estás seguro?' } %>

      <% if user.admin? %>
        (Administrador)
      <% else %>
        <%= link_to 'Hacer Administrador', make_admin_admin_index_path(user), method: :patch, data: { confirm: '¿Hacer administrador?' } %>
      <% end %>
    </li>
  <% end %>
</ul>
