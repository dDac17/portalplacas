<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%= link_to "Inicio", root_path, class: "nav-link" %>
      </li>
      <% if session[:user_id] %>
        <!-- Si hay una sesión activa, muestra el botón de cerrar sesión -->
        <li class="nav-item">
          <%= link_to "Cerrar sesión", logout_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <!-- Si no hay una sesión activa, muestra los botones de iniciar sesión y crear cuenta -->
        <li class="nav-item">
          <%= link_to "Iniciar sesión", login_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Crear cuenta", signup_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>


